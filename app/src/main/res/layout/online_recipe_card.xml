<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/parent_to_card_height"
    android:layout_width="@dimen/parent_to_card_width"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/recipe_cardview"
        android:layout_width="@dimen/card_width" android:layout_height="@dimen/card_height"
        card_view:cardCornerRadius="4dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_cardview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:src="@drawable/grey_box_placeholder"
                android:layout_height="match_parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_download"
                android:layout_width="@dimen/download_button_width"
                android:layout_height="@dimen/download_button_height"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@android:color/white"
                android:backgroundTintMode="screen"
                android:elevation="20dp"
                card_view:fabCustomSize="@dimen/download_button_height"
                android:scaleType="centerInside"
                android:src="@drawable/baseline_get_app_24"
                android:tint="@color/colorPrimary"
                card_view:backgroundTint="@android:color/black" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_cardview"
            android:textColor="@android:color/black"
            android:fontFamily="@font/quicksand_medium"
            android:textStyle="bold"
            android:textSize="@dimen/recipe_name_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp" />


</LinearLayout>